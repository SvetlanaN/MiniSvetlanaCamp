<h1>Log in</h1>

<% if flash[:danger] %>
  <div style="color: red">
    <%= flash[:danger] %>
  </div>
<% end %>

<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, name: 'session[email]' %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, name: 'session[password]' %>
  </div>
  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>

