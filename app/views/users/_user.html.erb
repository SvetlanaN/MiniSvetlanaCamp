<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Roles:</strong>
    <% user.roles.each do |role| %>
      <%= role.titleize %>
      <%= ", " unless role == user.roles.last %>
    <% end %>
  </p>
</div>
