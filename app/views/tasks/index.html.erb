<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %> |
      <%= link_to "Show project", project_path(task.project_id) %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
